{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": [
        "es6"
      ],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": ".",
      "paths": {
        "*": [
          "src/*"
        ],
        "tests": [
          "tests/*"
        ],
        "@components/*": ["./src/components/*"],
        "@public": ["./src/public"],
        "@state" : ["./src/state"],
        "@KhoPlus":["./src/KhoPlus"],
        "@router": ["./src/router"],
      }
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
    ],
    "extends": "expo/tsconfig.base",
  
  }
  